# =============================================================================
# EcommerceGo - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# PostgreSQL (each service uses its own database)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ecommerce
POSTGRES_PASSWORD=ecommerce_secret
POSTGRES_SSL_MODE=disable

# Service-specific database names
PRODUCT_DB_NAME=product_db
CART_DB_NAME=cart_db
ORDER_DB_NAME=order_db
CHECKOUT_DB_NAME=checkout_db
PAYMENT_DB_NAME=payment_db
USER_DB_NAME=user_db
INVENTORY_DB_NAME=inventory_db
CAMPAIGN_DB_NAME=campaign_db
NOTIFICATION_DB_NAME=notification_db
MEDIA_DB_NAME=media_db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Kafka
# -----------------------------------------------------------------------------
KAFKA_BROKERS=localhost:9092

# -----------------------------------------------------------------------------
# Elasticsearch
# -----------------------------------------------------------------------------
ELASTICSEARCH_URL=http://localhost:9200

# -----------------------------------------------------------------------------
# MinIO (S3-compatible object storage)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ecommerce-media
MINIO_USE_SSL=false

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=change-this-to-a-secure-secret-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# -----------------------------------------------------------------------------
# Payment (Stripe)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
PAYMENT_GATEWAY=mock

# -----------------------------------------------------------------------------
# Notification Providers
# -----------------------------------------------------------------------------
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@ecommercego.dev

# -----------------------------------------------------------------------------
# Service Ports (HTTP / gRPC)
# -----------------------------------------------------------------------------
PRODUCT_HTTP_PORT=8001
PRODUCT_GRPC_PORT=9001
CART_HTTP_PORT=8002
CART_GRPC_PORT=9002
ORDER_HTTP_PORT=8003
ORDER_GRPC_PORT=9003
CHECKOUT_HTTP_PORT=8004
PAYMENT_HTTP_PORT=8005
PAYMENT_GRPC_PORT=9005
USER_HTTP_PORT=8006
USER_GRPC_PORT=9006
INVENTORY_HTTP_PORT=8007
INVENTORY_GRPC_PORT=9007
CAMPAIGN_HTTP_PORT=8008
CAMPAIGN_GRPC_PORT=9008
NOTIFICATION_HTTP_PORT=8009
SEARCH_HTTP_PORT=8010
MEDIA_HTTP_PORT=8011
GATEWAY_HTTP_PORT=8080
BFF_PORT=3001
WEB_PORT=3000
CMS_PORT=3002
