{
  "name": "master-agent",
  "version": "1.0.0",
  "description": "EcommerceGo Master Agent â€” decides next pipeline iteration via Claude API",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "REPO_ROOT=.. tsx watch src/index.ts",
    "build": "tsc",
    "start": "REPO_ROOT=.. node dist/index.js",
    "typecheck": "tsc --noEmit",
    "decide": "REPO_ROOT=.. npx tsx src/cli.ts",
    "decide:execute": "REPO_ROOT=.. npx tsx src/cli.ts --execute",
    "decide:watch": "REPO_ROOT=.. npx tsx src/cli.ts --watch 15",
    "decide:loop": "REPO_ROOT=.. npx tsx src/cli.ts --watch 15 --execute"
  },
  "dependencies": {
    "fastify": "^5.3.3",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
